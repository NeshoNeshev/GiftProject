@model GiftProject.Web.ViewModels.Administration.Product.ProductInputModel
@{
    ViewData["Title"] = "Create Product in category";
}
<div class="text-center">
    <h1 class="text-primary">Създай продукт в @Model.CategoryName</h1>
</div>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Administration" asp-controller="Product" asp-action="CreateProductInCategory" enctype="multipart/form-data" method="post">

           
            <div class="form-group">
                <label class="text-center" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Име на продукта" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group border border-secondary">
                <label for="customFile">Качи снимка</label>
                <input type="file" class="form-control-file border border-secondary" id="customFile" asp-for="ImgUrl" />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>

            <div>
                <label class="text-center" asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Описание на продукта"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Създай</button>
        </form>
    </div>
</div>