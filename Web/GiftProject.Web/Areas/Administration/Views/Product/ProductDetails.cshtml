@using GiftProject.Web.ViewModels.Administration.Product
@model GiftProject.Web.ViewModels.Administration.Product.AdministrationProductDetailsViewModel
@{
    this.ViewData["Title"] = "Product Details";
}
<section class="bg-light mt-2">
    <div class="container">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <div class="tileCard">
                @*Todo: change margin bottom*@
                <h4 class="text-center mt-2">@Model.Name</h4>
                <div >
                    <div class="banner-img">
                        <img src="@Model.ImgUrl" alt="@Model.Name">
                    </div>
                    
                    <div class="dates">

                        <div class="start">
                            <strong>Създаден:</strong> @Model.CreatedOn.Date.ToString("dd/MM/yyyy")
                         
                        </div>
                        <div class="ends">
                            <strong>Променен: </strong> @Model.ModifiedOn.GetValueOrDefault().Date.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="stats">

                        <div class="text-center">
                            <strong>Код:</strong>  @Model.CatalogueNumber
                        </div>


                    </div>

                    <div class="stats">

                        <div>
                            <strong>Харесвания:</strong> @Model.VotesCount
                        </div>

                        <div>
                            <strong>Продукт ИД:</strong> @Model.Id
                        </div>

                        <div>
                            <strong>Категория ИД"</strong> @Model.CategoryName
                        </div>

                    </div>

                    @*<p class="text-center mb-0"></p>*@
                    <div class="card-body text-center">

                        <p class="text-center mb-0">
                            @Model.Description
                        </p>

                    </div>

                    @*<div>
                            <strong>INVITED</strong> 3098
                        </div>

                        <div>
                            <strong>JOINED</strong> 562
                        </div>

                        <div>
                            <strong>DECLINED</strong> 182
                        </div>*@

                    <div class="footer text-center">
                        <a asp-area="Administration" asp-controller="Product" asp-action="EditProduct" asp-route-Id="@Model.Id" class="btn btn-outline-warning btn-sm">Промени</a>
                        <a asp-area="Administration" asp-controller="Product" asp-action="Remove" asp-route-productId="@Model.Id" class="btn btn-outline-danger btn-sm">Изтрий</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>