@model GiftProject.Web.ViewModels.Administration.Product.ProductInputModel
@{
    ViewData["Title"] = "Create Product";
}
<div class="text-center">
    <h1 class="text-primary">@this.ViewData["Title"]</h1>
</div>
<form method="post" asp-action="CreateProduct">
    <section class="border border-primary">
        <div class="container">
            <div class="row" style="margin-bottom: 20px">
                <div class="col-md-2">
                    <label asp-for="CategoryId" class="text-primary"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var item in Model.CategoryDropDown)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="ImgUrl" class="text-primary"></label>
                    <input asp-for="ImgUrl" class="form-control" placeholder="Enter Img Url" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Description" class="text-primary"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </section>
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
        Save
    </button>

    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Do you want to save these changes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>