@using GiftProject.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="wcategoryIdth=device-wcategoryIdth, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - Adminstration</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/boxicons/css/boxicons.css" />
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link rel="stylesheet" href="~/css/Search.css" />


</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg py-3 navbar-light bg-white shadow-sm">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                <!-- Logo Image -->
                <img src="~/img/Logo.png" width="45" alt="" class="d-inline-block align-middle mr-2">
                <!-- Logo Text -->
                @*<span class="text-uppercase font-weight-bold">Company</span>*@
            </a>

            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span class="navbar-toggler-icon"></span></button>

            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Administration" asp-controller="Category" asp-action="CreateCategory">Създай категория</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Administration" asp-controller="Category" asp-action="AllCategory">Всички категории</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Administration" asp-controller="Product" asp-action="CreateProduct">Създай продукт</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Administration" asp-controller="Product" asp-action="AllProduct">Всички продукти</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <button onclick="topFunction()" id="topButton" class="btn btn-primary btn-sm">Top</button>
        &copy; @DateTime.UtcNow.Year. All Rights Reserved Designed by <a href="" target="_blank"><span>Nesho Neshev</span></a>
        <button onclick="topFunction()" id="topButton" class="btn btn-primary btn-sm">Top</button>
    </footer>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>