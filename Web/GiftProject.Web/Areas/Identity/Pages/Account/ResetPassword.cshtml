@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">
                                Променете паролата си.
                            </h1>
                        </div>

                        <form class="user" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Input.Code" type="hidden" />
                            <div class="form-group">

                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" type="email" id="exampleInputEmail" class="form-control form-control-user" placeholder="Вашият email адрес" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" type="password" id="exampleInputPassword" class="form-control form-control-user" placeholder="Парола" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Повторете паролата" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">Регистрация</button>

                            <hr>

                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-page="./ForgotPassword">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" asp-page="./Login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
