@using GiftProject.Web.ViewModels.Product
@model GiftProject.Web.ViewModels.Details.DetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="@Model.ImgUrl" alt="Card image cap" id="product-detail">
                </div>
            </div>

            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2 text-center">@Model.Name</h1>
                        <p class="py-2 text-center">
                            <span class="bx bxs-heart text-primary"> @Model.VotesCount</span>
                        </p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Номер: @Model.CatalogueNumber</h6>
                            </li>
                        </ul>

                        <h6>Описание:</h6>
                        <p>@Model.Description</p>

                        <h6>Категория: @Model.CategoryName</h6>
                        <div class="col text-center">
                            <a class="btn btn-outline-primary" href="tel:713-992-0916">
                                Поръчай <span class="bx bx-phone-call"></span>713-992-0916
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (Model.RelatedProducts.Count() > 0)
{

    <section class="pt-5 pb-5">
        <div class="container">
            <div class="text-center">
                <h4>Сходни продукти</h4>
            </div>
            <div class="row ">

                @foreach (var product in Model.RelatedProducts)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 product-wap rounded-0">
                            <div class="card rounded-0">
                                <img class="card-img-top" src="@product.ImgUrl" alt="@product.Name" width="500" height="350">
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">
                                        <form id="votesForm" method="post"></form>
                                        <li><a class="btn btn-primary text-white" href="#" onclick="upVote(@product.Id)"><i class="bx bx-heart"></i></a></li>
                                        <li><a class="btn btn-primary text-white mt-2" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><i class="bx bx-happy-heart-eyes"></i></a></li>
                                        <li><a class="btn btn-primary text-white mt-2" href="#"><i class="bx bx-card"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body text-center">
                                <a href="#" class="h3 text-decoration-none">@product.Name</a>
                                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                    <li>
                                        <p class="text-center">К. № @product.CatalogueNumber</p>
                                    </li>
                                </ul>
                                <p id="votesCount" class="bx bxs-heart text-primary"> @product.VotesCount</p>
                                <a class="text-decoration-none" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                                    <p class="text-center mb-0">@product.ShortDescription</p>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
@section Scripts
{

    <script>
        function upVote(productId) {

            var token = $("#votesForm input[name=__RequestVerificationToken]").val();
            var json = { productId: productId, isUpVote: true };
            console.log(json);
            $.ajax({
                url: "/api/votes",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: { 'X-CSRF-TOKEN': token },
                success: function (data) {
                    $("#votesCount").html(data.votesCount);
                }
            });
        }
    </script>
}