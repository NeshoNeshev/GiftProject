@model GiftProject.Web.ViewModels.Contact.ContactInputModel
@using GiftProject.Common
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Contact page";
}
<div class="container box-shadow">
    <section id="contact" class="contact">
        <div class="container">
            <div class="row mt-1 mb-1">
                <div class="col-lg-4">
                    <div class="info">
                        <div class="address">
                            <i class="bx bx-location-plus"></i>
                            <h4>Адрес:</h4>
                            <p>@GlobalConstants.Address @GlobalConstants.Town</p>
                        </div>

                        <div class="email">
                            <i class="bx bx-mail-send"></i>
                            <h4>Email:</h4>
                            <p>@GlobalConstants.Email</p>
                        </div>

                        <div class="phone">
                            <a href="tel:@GlobalConstants.PhoneNumber"><i class="bx bx-phone"></i></a>
                            <h4>Обади ни се:</h4>
                            <p>@GlobalConstants.PhoneNumber</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 mt-5 mt-lg-0">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message"></label>
                            <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />
                        <button type="submit" class="btn btn-primary">Изпрати</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
